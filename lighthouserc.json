{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "settings": {
        "staticDistDir": "./dist"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.5 }],
        "categories:accessibility": ["warn", { "minScore": 0.5 }],
        "categories:best-practices": ["warn", { "minScore": 0.5 }],
        "categories:seo": ["warn", { "minScore": 0.5 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
